---
import Root from "@layouts/Root.astro";

import Logo from "@components/Logo.astro";

import { menu } from "@lib/site";

import { Icon } from "astro-icon/components";

const techs = [
   {
      name: "React",
      icon: "bxl:react",
   },
   {
      name: "Next.js",
      icon: "file-icons:nextjs",
   },
   {
      name: "Svelte + Kit",
      icon: "file-icons:svelte",
   },
   {
      name: "Astro",
      icon: "devicon-plain:astro",
   },
   {
      name: "Node.js",
      icon: "bxl:nodejs",
   },
   {
      name: "TypeScript",
      icon: "bxl:typescript",
   },
   {
      name: "TailwindCSS",
      icon: "bxl:tailwind-css",
   },
   {
      name: "Bootstrap",
      icon: "devicon-plain:bootstrap",
   },
   {
      name: "Sass/SCSS",
      icon: "bxl:sass"
   },
   {
      name: "Docker",
      icon: "bxl:docker"
   },
   {
      name: "PostgreSQL",
      icon: "bxl:postgresql"
   },
   {
      name: "SQLite",
      icon: "file-icons:sqlite"
   },
   {
      name: "Supabase",
      icon: "devicon-plain:supabase"
   },
   {
      name: "Figma",
      icon: "devicon-plain:figma"
   },
];
---

<Root>
   <div class="min-h-screen flex items-center">
   <main class="container py-8 flex flex-col lg:flex-row items-center gap-10">
      <div class="text-lg">
         <Logo id="logo" class="max-w-44 fill-pink mb-10" />
         <section class="space-y-4 mb-10">
            <p>Hello, I am AstroxVim (real name is James Martin).</p>
            <p>
               As a seasoned full stack engineer with 8 years of experience, I have spearheaded the development of scalable web applications, leveraging a robust toolkit that includes React.js, Node.js and modern DevOps practices.
            </p>
            <p>
               My tenure at several companies highlights my proficiency in enhancing user engagement through innovative, data-driven solutions and leading teams towards achieving complex project goals.
            </p>
            <p>
               With a strong foundation in both front-end aesthetics and back-end functionality, I excel in delivering tailored solutions that bridge technical execution with user-centric design.
            </p>
            <div class="flex flex-wrap items-center gap-4 text-xl">
               <a
                  href="https://github.com/astroxvim"
                  target="_blank"
                  class="block bg-white py-2 px-4 rounded-full text-black hover:bg-white/80 transition-colors"
                  ><Icon name="bi:github" class="inline-block mr-2" />GitHub</a
               >
               <a
                  href="mailto:valerosojamesmartin@gmail.com"
                  class="block bg-white py-2 px-4 rounded-full text-black hover:bg-white/80 transition-colors"
                  ><Icon name="bi:google" class="inline-block mr-1" />Mail</a
               >
            </div>
         </section>
         <section>
            <p>Here are some technologies I work with:</p>
            <ul class="font-medium text-center flex flex-wrap gap-x-4 gap-y-8 justify-evenly !mt-10">
               {techs.map(tech => (
                  <li class="w-[6.5rem]"><Icon name={tech.icon} size={50} class="mx-auto mb-1" /> {tech.name}</li>
               ))}
            </ul>
         </section>
      </div>
      <nav class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 text-center gap-4 font-medium lg:-order-1 lg:max-w-[197px] lg:mr-10">
         {
            menu.map((item) => (
               <a
                  href={item.href}
                  class:list={[
                     "block px-6 py-4 rounded-xl transition-all lg:max-w-[540px]",
                     item.class,
                     "hover:ring-4 hover:ring-offset-4 hover:ring-offset-crust",
                  ]}
               >
                  <div class="h-[96px] flex items-center justify-center mb-4">
                     <img
                        src={`/specific/index/${item.img}`}
                        alt={item.title}
                        width={75}
                     />
                  </div>
                  <h2 class="font-display text-xl font-black mb-2">
                     {item.title}
                  </h2>
               </a>
            ))
         }
      </nav>
   </main>
</div>
</Root>

<style>
   @keyframes hue-rotate {
      0% {
         filter: hue-rotate(0deg);
      }
      100% {
         filter: hue-rotate(360deg);
      }
   }

   #logo {
      animation: hue-rotate 60s infinite linear;
   }
</style>
